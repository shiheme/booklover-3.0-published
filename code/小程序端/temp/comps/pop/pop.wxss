/* 书籍列表页筛选弹层样式 */
.catsselect {
  padding: 50rpx 0 0;
}

.catsselect .tit {
  font-weight: 600;
  font-size: 36rpx;
  margin-top: 10rpx;
  text-align: center;
  opacity: .8;
}

.catsselect .cellbox {
  padding: 50rpx;
}

.catsselect .cellbox .checkboxgroup {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.catsselect .cellbox .checkboxgroup::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  box-sizing: border-box;
}

.catsselect .cellbox .cell {
  position: relative;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin-bottom: 40rpx;
}

.catsselect .cellbox.category .cell {
  height: 80rpx;
}


