.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  /* transform: scaleY(0.5); */
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .icon {
  width: 50rpx;
  height: 50rpx;
  font-size: 1.6em;
  opacity: .3;
  margin-top:12rpx;
}

.tab-bar-item .icon.selected {
  opacity: .8;
}

.tab-bar-item .text {
  font-size: 20rpx;
  font-weight: 500;
  
}

.tab-bar.simple .tab-bar-item .icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 2.1em;
}

.tab-bar.simple .tab-bar-item .text {
  display: none;
}

.tab-bar-item-add .icon,
.tab-bar.simple .tab-bar-item-add .icon {
  width: 70rpx;
  height: 70rpx;
  opacity: 1;
  border-radius: 50%;
  font-size: 1.2rem;
}

.addlist {
  padding: 40rpx;
}

.addlist .card-cell {
  padding: 0rpx 40rpx;
  background: rgba(123, 123, 123, .1);
  border-radius: 20rpx;
  margin: 30rpx 0;
}

.addlist .card-cell-msg .card-cell-base .card-cell-title {
  font-size: 36rpx;
  line-height: 48rpx;
}

.addlist .card-cell-msg {
  border-width: 0;

}