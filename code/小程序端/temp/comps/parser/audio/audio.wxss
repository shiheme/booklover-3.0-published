@import "../../../css/skin.wxss";

:host {
  display: block;
  margin: 0 40rpx;
}

.author {
  width: 140rpx;
  font-size: 28rpx;
  color: #888;
}

.author,
.name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  overflow: hidden;
  /* background-color: rgb(0, 0, 0, 0.2);
  border: 3.5rpx solid white; */
  border-radius: 50%;
  opacity: 0.9;
}

.contain {
  position: relative;
  display: flex;
  /* width: 650rpx;
  background-color: #fcfcfc;
  border: 1px solid #e0e0e0; */
  border-radius: 90rpx;
  height:120rpx;
  align-items: center;
  /* padding:0 20rpx; */
}

.name {
  width: 320rpx;
  font-size: 33rpx;
  line-height: 80rpx;
}

.pause {
  width: 30rpx;
  height: 30rpx;
  /* background-color: white; */
}

.play {
  margin-left: 5rpx;
  border-top: 18rpx solid transparent;
  border-bottom: 18rpx solid transparent;
  border-left-width: 30rpx;
  border-left-style: solid ;
}

.poster {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 15%;
  height: 100%;
  margin-left:5%;
  margin-right:2%;
  /* background-color: #e6e6e6; */
  background-size: contain;
  /* border-radius: 50%; */
}

.slider {
  position: absolute;
  right: 8%;
  /* bottom: 18.75rpx; */
  width: 70%;
  /* position: relative; */
  margin: 0;
}

.title {
  flex: 1;
  margin: 10rpx 0 0 35.15rpx;
  text-align: left;
}

.time {
  position: absolute;
  top:10%;
  right:8%;
  /* margin: 16.4rpx 35.15rpx 0 0; */
  font-size: 26rpx;
  /* color: #888; */
  opacity: .6;
}